<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền cho mục lớp học -->
    <solid android:color="#F0F0F0" /> <!-- Thay màu tùy theo nhu cầu -->

    <!-- Bo góc cho nền -->
    <corners android:radius="8dp" />

    <!-- Thiết lập viền -->
    <stroke
        android:width="1dp"
        android:color="#B0B0B0" /> <!-- Màu viền -->

    <!-- Thiết lập padding nếu cần -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>
